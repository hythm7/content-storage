  "components": {
    "schemas": {
      "Distribution": {
        "type": "object",
        "required": [
          "id",
          "user",
          "meta",
          "name",
          "version",
          "auth",
          "api",
          "created"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "28e3d63e-1abd-4e5e-89c0-757266ef7868"
          },
          "user": {
            "type": "string",
            "example": "john"
          },
          "meta": {
            "type": "string",
            "example": "SUCCESS"
          },
          "name": {
            "type": "string",
            "example": "Name"
          },
          "version": {
            "type": "string",
            "example": "0.0.1"
          },
          "auth": {
            "type": "string",
            "example": "raku:username"
          },
          "api": {
            "type": "string",
            "nullable": true,
            "example": "1"
          },
          "created": {
            "type": "string",
            "formate": "date",
            "example": "2024-05-19 10:46:51"
          }
        }
      },
      "Build": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "28e3d63e-1abd-4e5e-89c0-757266ef7868"
