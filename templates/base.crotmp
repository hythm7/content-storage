<:macro page( :$title, :$script, :$user )>
<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <title><$title></title>
  <script src="/js/main.bundle.js"></script>
  <?$script> <@$script : $src> <script src="<$src>"></script> </@> </?>
</head>

<body>
<header>

<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/images/logo/camelia-logo.png" alt="Logo" width="42" height="42">
      Content Storage
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <&nav-item( 'Builds', '/build' )>
      </ul>
      <div class="input-group">
        <input id="search-input" class="form-control form-control-dark" type="text" placeholder="⌕" arla-label="Search">
        <span class="input-group-text icon-link icon-link-hover" style="--bs-1con-link-transform: scale(1.2);" type="button" oncl1ck="">
          <i class="bi-x"></i>
        </span>
      </div>
      <?{ $user }>
      <div>
        <button class="btn text-nowrap" type="button" data-bs-toggle="modal" data-bs-target="#dropzone-modal" aria-expanded="false"> Add Distribution </button>
      </div>
      <div class="dropdown">
        <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi-person"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-lg-end">
          <li><a class="dropdown-item" href="#"><$user.username></a></li>
          <li><a class="dropdown-item" href="/api/v1/user/logout">logout</a></li>
        </ul>
      </div>
      </?>
      <!>
      <div>
        <button class="btn text-nowrap" type="button" data-bs-toggle="modal" data-bs-target="#login-modal" aria-expanded="false"> Login </button>
      </div>
      <div>
        <button class="btn text-nowrap" type="button" data-bs-toggle="modal" data-bs-target="#register-modal" aria-expanded="false"> Register </button>
      </div>
      </!>

    </div>
  </div>
</nav>

<div class="modal fade" id="login-modal" tabindex="-1" aria-labelledby="login-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">Login</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="login-alert" class="alert alert-primary" role="alert"></div>
        <form id="login-form">
          <div class="form-group">
            <label for="login-username">Username</label>
            <input type="text" name="username" class="form-control" id="login-username" autocomplete="on" required>
          </div>
          <div class="form-group">
            <label for="login-password">Password</label>
            <input type="password" name="password" class="form-control" id="login-password" autocomplete="on" required>
          </div>
          <div style="padding-top: 10px">
            <input type="submit" value="Log In" class="btn btn-primary" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="register-modal" tabindex="-1" aria-labelledby="register-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">Register</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="register-alert" class="alert" role="alert"></div>
          <form id="register-form" method="post" action="/api/v1/user/register">
            <div class="form-group">
              <label for="register-username">Username</label>
              <input type="text" name="username" class="form-control" id="register-username" autocomplete="on" required>
            </div>
            <div class="form-group">
              <label for="register-password">Password</label>
              <input type="password" name="password" class="form-control" id="register-password" autocomplete="on" required>
            </div>
            <div style="padding-top: 10px">
              <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="dropzone-modal" tabindex="-1" aria-labelledby="dropzone-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="dropzone-modal-title">Dropzone</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="drop-area" class="border rounded justify-content-center align-items-center">
          <div class="container py-4 px-3 mx-auto">
            <i class="bi bi-cloud-arrow-up-fill text-primary" style="font-size: 48px"></i>
            <div class="mb-3">
              <label for="drop-area-input" class="form-label">Drag and drop your distribution here or click to select a file.</label>
              <input type="file" id="drop-area-input" name="file" multiple accept="application/gzip" class="form-control d-none" multiple/>
            </div>
            <div id="progress" class="mb-3">
            </div>
            <button id="drop-area-submit" class="btn btn-outline-secondary form-control w-50 disabled">Add</button>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div id="alert" class="position-absolute start-50 translate-middle-x">
  <div class="alert alert-warning fade" role="alert">
  </div>
</div> 

</header>

<div class="container">
  <:body>
</div>

<div class="container-fluid mt-5">
  <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
    <ul class="nav col-md-4">
      <li class="nav-item"><a href="/" class="nav-link px-2 text-body-secondary">Home</a></li>
      <li class="nav-item"><a href="https://raku.org" class="nav-link px-2 text-body-secondary">Raku</a></li>
    </ul>

    <a href="https://raku.org" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
      <img src="/images/logo/camelia-logo.png" alt="Logo" width="42" height="42">
    </a>

      <a href="https://spdx.org/licenses/Artistic-2.0.html" class="text-body-secondary">Artistic License 2.0</a>
  </footer>
</div>

</body>
</html>
</:macro>

<:sub nav-item( $title, $link )>
  <li class="nav-item text-nowrap"> <a class="nav-link" aria-current="page" href="<$link>"> <$title> </a> </li>
</:>
